{
  "name": "haida-api",
  "version": "1.0.0",
  "description": "HAIDA Change Detection API - Webhook receiver for automated test triggering",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "playwright test",
    "test:report": "playwright show-report",
    "docker:build": "docker build -t haida-api:latest .",
    "docker:run": "docker run -p 3001:3001 --env-file .env haida-api:latest"
  },
  "keywords": [
    "haida",
    "qa-automation",
    "change-detection",
    "webhook",
    "playwright"
  ],
  "author": "Hiberus",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "@playwright/test": "^1.40.0",
    "axe-playwright": "^1.2.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
