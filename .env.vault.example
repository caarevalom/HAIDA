# ============================================
# HAIDA SECURE ENVIRONMENT CONFIGURATION
# ============================================
# IMPORTANTE: Este archivo es un template
# 1. Copia este archivo a .env
# 2. Reemplaza los valores con credenciales reales
# 3. NUNCA commitees .env al repositorio
# 4. Usa variables de entorno en CI/CD
# ============================================

# ============================================
# DATABASE (Supabase PostgreSQL)
# ============================================
DATABASE_URL=postgresql://postgres:[YOUR_PASSWORD]@db.[YOUR_PROJECT].supabase.co:5432/postgres
POSTGRES_HOST=db.[YOUR_PROJECT].supabase.co
POSTGRES_PORT=5432
POSTGRES_DATABASE=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=[SECURE_PASSWORD_MIN_16_CHARS]

# ============================================
# SUPABASE API
# ============================================
SUPABASE_URL=https://[YOUR_PROJECT].supabase.co
SUPABASE_ANON_KEY=[YOUR_ANON_KEY]
SUPABASE_SERVICE_ROLE_KEY=[YOUR_SERVICE_ROLE_KEY]

# ============================================
# MICROSOFT ENTRA ID (Azure AD OAuth)
# ============================================
AZURE_CLIENT_ID=[YOUR_CLIENT_ID]
AZURE_TENANT_ID=[YOUR_TENANT_ID]
AZURE_CLIENT_SECRET=[YOUR_CLIENT_SECRET]
AZURE_REDIRECT_URI=http://localhost:8000/auth/callback

# ============================================
# JWT AUTHENTICATION
# ============================================
# IMPORTANTE: Generar con: openssl rand -base64 32
JWT_SECRET=[GENERATE_SECURE_SECRET_32_CHARS_MIN]
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=8000
BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# ============================================
# TESTING
# ============================================
TEST_TIMEOUT=30000
HEADLESS=true
SLOWMO=0

# ============================================
# OBSERVABILITY (Opcional)
# ============================================
# SENTRY_DSN=[YOUR_SENTRY_DSN]
# LOG_LEVEL=info
# APM_SERVER_URL=[YOUR_APM_URL]

# ============================================
# NOTIFICATIONS (Opcional)
# ============================================
# SLACK_WEBHOOK=[YOUR_SLACK_WEBHOOK]
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=[YOUR_EMAIL]
# EMAIL_PASSWORD=[YOUR_APP_PASSWORD]

# ============================================
# REDIS CACHE (Opcional)
# ============================================
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=[YOUR_REDIS_PASSWORD]

# ============================================
# SECURITY HEADERS
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_HOSTS=localhost,127.0.0.1
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
