# HAIDA Change Detection Environment Configuration

# ============================================
# API CONFIGURATION
# ============================================
PORT=3001
NODE_ENV=development

# ============================================
# CHANGEDETECTION.IO CONFIGURATION
# ============================================
CHANGEDETECTION_URL=http://changedetection:5000
CHANGEDETECTION_API_KEY=your-api-key-here

# ============================================
# WEBHOOK CONFIGURATION
# ============================================
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
GITHUB_TOKEN=your-github-token
TEAMS_WEBHOOK=https://outlook.webhook.office.com/webhookb2/...

# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=haida_results
DB_USER=haida_user
DB_PASSWORD=secure-password-change-me
DB_SSL=false

# ============================================
# CACHE CONFIGURATION (Redis)
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# TEST CONFIGURATION
# ============================================
TEST_URL=http://localhost:3000
TEST_TIMEOUT=60000
TEST_RETRIES=2
TEST_WORKERS=4

# ============================================
# BROWSER CONFIGURATION
# ============================================
BROWSER_TYPE=chromium
BROWSER_HEADLESS=true
BROWSER_SLOW_MO=0

# ============================================
# ALLURE REPORTS CONFIGURATION
# ============================================
ALLURE_URL=http://allure:4040
ALLURE_RESULTS_DIR=./test-results/allure

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE=./logs/haida.log

# ============================================
# NOTIFICATION CONFIGURATION
# ============================================
NOTIFY_ON_SUCCESS=true
NOTIFY_ON_FAILURE=true
NOTIFY_ON_FLAKY=true
NOTIFICATION_CHANNELS=slack,email

# ============================================
# EMAIL NOTIFICATION CONFIGURATION
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=hola@stayarta.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=haida-alerts@hiberus.com
SMTP_TO=qa-team@hiberus.com

# ============================================
# CI/CD INTEGRATION
# ============================================
CI_SYSTEM=github
GITHUB_REPO=hiberus/haida
GITHUB_WORKFLOW_ID=change-detection-tests
AZURE_DEVOPS_ORGANIZATION=hiberus
AZURE_DEVOPS_PROJECT=HAIDA

# ============================================
# SECURITY
# ============================================
API_SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
CORS_ORIGIN=http://localhost:3000,https://haida.hiberus.com

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_VISUAL_REGRESSION=true
ENABLE_ACCESSIBILITY_CHECKS=true
ENABLE_PERFORMANCE_TESTS=true
ENABLE_API_TESTS=true
ENABLE_DATABASE_CLEANUP=false
