CTB_OFICINAS_URL=https://mcprod.thisisbarcelona.com/es/offices/

# Credenciales CTB
CTB_USERNAME=your_username
CTB_PASSWORD=your_password
CTB_AFILIATS_USERNAME=your_email@example.com
CTB_AFILIATS_PASSWORD=your_password
CTB_OFICINAS_USERNAME=your_email@example.com
CTB_OFICINAS_PASSWORD=your_password

# Redmine
REDMINE_URL=https://redmine.hiberus.com/redmine

# SharePoint
SHAREPOINT_URL=your_sharepoint_url

# Rutas locales CTB
CTB_DOCS_ROOT=/Users/carlosa/Hiberus/CTB
FIGMA_EXPORTS_DIR=/Users/carlosa/Hiberus/CTB/docs/figma/figma_exports

# ===========================================
# 5. USUARIOS DE PRUEBA
# ===========================================

# Test data genérico
