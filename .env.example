# ===========================================
# 6. TESTING - PLAYWRIGHT/ALLURE
# ===========================================

# Configuración de navegadores
BROWSERS=chromium,firefox,webkit
PLATFORMS=desktop,ios,android

# Viewports
VIEWPORTS_DESKTOP=1366x768,1440x900
VIEWPORTS_MOBILE_IOS=390x844
VIEWPORTS_MOBILE_ANDROID=412x915

# Testing config
TEST_TIMEOUT=30000
HEADLESS=true
SLOWMO=0

# Directorios de reportes
ALLURE_RESULTS_DIR=./allure-results
ALLURE_REPORT_DIR=./allure-report
PLAYWRIGHT_REPORT_DIR=playwright-report

# ISTQB
ISTQB_TEMPLATE_VERSION=v4.0
TEST_LEVEL=System_Integration
TEST_TYPE=Functional_E2E

# ===========================================
# 7. INTEGRACIONES - NOTIFICACIONES
# ===========================================

# Slack
SLACK_WEBHOOK=your_slack_webhook_url

# Telegram Bot
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ===========================================
# 8. DEPLOYMENT - VERCEL/RAILWAY
# ===========================================

# Vercel
VERCEL_TOKEN_HAIDA=YOUR_VERCEL_TOKEN
VERCEL_TOKEN_ACCOUNT=YOUR_ACCOUNT_TOKEN
VERCEL_USER_ID=YOUR_USER_ID
VERCEL_ORG_ID=YOUR_ORG_ID
VERCEL_OIDC_TOKEN=your_vercel_oidc_token

# Railway
RAILWAY_TOKEN=YOUR_RAILWAY_TOKEN

# ===========================================
# 9. AI / LLM CONFIGURATION
# ===========================================

# AI Gateway
AI_GATEWAY_API_KEY=YOUR_AI_GATEWAY_KEY

# LM Studio (DeepSeek R1)
LM_STUDIO_URL=http://localhost:1234/v1
LM_STUDIO_MODEL=lmstudio-community/DeepSeek-R1-0528-Qwen3-8B-MLX-4bit
LM_STUDIO_API_KEY=lm-studio

# Route LLM / Chat LLM
LLM_PROVIDER=lmstudio
ROUTE_LLM_URL=https://routellm.abacus.ai/v1
ROUTE_LLM_MODEL=gpt-5
ROUTE_LLM_API_KEY=YOUR_ROUTE_LLM_API_KEY

# ===========================================
# 10. AUTH / JWT / SSO
# ===========================================

# JWT Configuration
JWT_SECRET=change_me_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
JWT_EXPIRATION_HOURS=24
AUTH_AUTO_PROVISION=true
AUTH_REGISTER_ENABLED=true

# Microsoft Entra ID (Azure AD SSO)
ENTRA_AUTHORITY=https://login.microsoftonline.com/YOUR_TENANT_ID
ENTRA_CLIENT_ID=YOUR_ENTRA_CLIENT_ID
ENTRA_CLIENT_SECRET=YOUR_ENTRA_CLIENT_SECRET
ENTRA_CLIENT_CERT_THUMBPRINT=YOUR_CERT_THUMBPRINT
ENTRA_CLIENT_CERT_PRIVATE_KEY_B64=YOUR_CERT_PRIVATE_KEY_BASE64
ENTRA_REDIRECT_URI=https://your-domain.com/entra/callback
GRAPH_SCOPES=User.Read email profile openid

# ===========================================
# 11. MICROSOFT COPILOT STUDIO
# ===========================================

# Copilot Studio (Direct Line)
DIRECT_LINE_SECRET=YOUR_DIRECT_LINE_SECRET
DIRECT_LINE_ENDPOINT=https://directline.botframework.com/v3/directline
COPILOT_DIRECTLINE_SECRET=YOUR_DIRECTLINE_SECRET_OPTIONAL
COPILOT_DIRECTLINE_ENDPOINT=https://directline.botframework.com/v3/directline

# ===========================================
# 12. OPCIONALES
# ===========================================

# Redis (caché)
# REDIS_URL=redis://localhost:6379

# SMTP (emails)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=user@example.com
# SMTP_PASS=password

# ===========================================
# NOTAS
# ===========================================
# Para obtener las credenciales:
# 1. Supabase: https://app.supabase.com/project/_/settings/api
# 2. Jira/Confluence: https://id.atlassian.com/manage-profile/security/api-tokens
# 3. Telegram Bot: @BotFather en Telegram
# 4. Vercel: vercel login + vercel env pull
# 5. Microsoft Entra ID: Azure Portal > App registrations
# 6. Copilot Studio: Microsoft Bot Framework Portal
#
# Recuerda:
# - Nunca versionar el archivo .env
# - Rotar credenciales regularmente
# - Usar diferentes credenciales para dev/staging/production
# - Los tokens JWT expiran periódicamente
